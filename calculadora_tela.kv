<CalculadoraTela>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    BoxLayout:
        size_hint_y: None
        height: 100

        TextInput:
            id: resultado
            font_size: 32
            readonly: True
            halign: 'right'
            multiline: False

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            Button:
                text: '7'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '8'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '9'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '/'
                on_press: root.on_button_press(self)
                font_size: 32

        BoxLayout:
            Button:
                text: '4'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '5'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '6'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '*'
                on_press: root.on_button_press(self)
                font_size: 32

        BoxLayout:
            Button:
                text: '1'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '2'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '3'
                on_press: root.on_button_press(self)
                font_size: 32
