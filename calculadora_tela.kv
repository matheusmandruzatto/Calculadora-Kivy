                text: '-'
                on_press: root.on_button_press(self)
                font_size: 32

        BoxLayout:
            Button:
                text: ','
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: '0'
                on_press: root.on_button_press(self)
                font_size: 32
            Button:
                text: 'C'
                on_press: root.on_clear(self)
                font_size: 32
            Button:
                text: '+'
                on_press: root.on_button_press(self)
                font_size: 32

        BoxLayout:
            Button:
                text: 'âˆš'
